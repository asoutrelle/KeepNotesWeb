package views

templ NoteForm(action string, title string, body string, folderId string) {
    <form method="POST" action={ action }>
        <input type="hidden" name="folder_id" value={ folderId } />
        <div class="note-content">

            <div class="note-header">
                <input
                    class="note-title"
                    type="text"
                    name="title"
                    value = { title }
                    placeholder="TÃ­tulo..."
                    required
                />
            </div>

            <textarea
                class="note-body"
                name="body"
                placeholder="Escribe tu nota..."
            >{ body }</textarea>

            <button type="submit" class="save-btn">Guardar</button>
        </div>
    </form>
}
