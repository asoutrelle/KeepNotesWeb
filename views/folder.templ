package views


import "keepnotesweb/db/sqlc"
import "strconv"

templ FolderList(folders []db.Folder) {
    <div>
        <div class="sidebar-header">
            <h2>Folders</h2>
        </div>

        @FolderForm("/folders", "", "")

        <div class="folder-list">
            for _, folder := range folders {
                <a class="folder-item" href={"/folders/" + strconv.Itoa(int(folder.ID))}>
                    <div class="folder-item-left">
                        <span class="folder-icon">ğŸ“</span>
                        <span>{ folder.Name }</span>
                    </div>
                    <span class="folder-count">0</span>
                </a>
            }
        </div>
    </div>
}



templ FolderPage(folders []db.Folder) {
    <div>
        <div class="content-header">
            <h2 class="content-title">Folders</h2>
        </div>
        @FolderList(folders)
    </div>
}